<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>HelloServlet</servlet-class>
        <init-param>
            <param-name>hello</param-name>
            <param-value>5</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetCookies</servlet-name>
        <servlet-class>com.devbian.cookie.SetCookiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCookies</servlet-name>
        <servlet-class>com.devbian.cookie.GetCookiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DemoSessionServlet</servlet-name>
        <servlet-class>com.devbian.session.DemoSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetCookies</servlet-name>
        <url-pattern>/servlet/setcookies</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetCookies</servlet-name>
        <url-pattern>/servlet/getCookies</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DemoSessionServlet</servlet-name>
        <url-pattern>/servlet/session</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.devbian.session.CounterListener</listener-class>
    </listener>

    <filter>
        <filter-name>CounterFilter</filter-name>
        <filter-class>com.devbian.filter.CounterFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CounterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>